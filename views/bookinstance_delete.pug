extends layout 

block content 
  h1= title 

  p #[strong Title:] #{instance.book.title} 
  p #[strong ID:] #{instance._id} 
  p #[strong Imprint:] #{instance.imprint} 
  p #[strong Status:] 
    if instance.status=='Available'
      span.text-success #{instance.status}
    else if instance.status=='Maintenance'
      span.text-danger #{instance.status} 
    else
      span.text-warning #{instance.status} 
  br 
  br 
  p Do you really want to delete this book copy from the database? 
  
  form(method='POST' action='') 
    div.form-group 
      input#id.form-control(type='hidden' name='id' required='true' value=instance._id )
    
    button.btn.btn-primary(type='submit') Delete 